---
title: Links
layout: layouts/base.njk
permalink: /links/
---
<ul class="pl-0 space-y-6 list-none">
  {% for item in links.items | sort(attribute='date') | reverse %}
    <li>
      <time class="text-sm text-zinc-500 dark:text-zinc-400" datetime="{{ item.date | dateToISO }}">{{ item.date | fromISO }}</time>
      <div><a href="{{ item.link }}">{{ item.title }}</a></div>
      <p class="text-sm mt-1">{{ item.notes | safe }}</p>
    </li>
  {% endfor %}
</ul>

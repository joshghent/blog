<ul class="not-prose pl-0 list-none space-y-2">
  {% for post in postslist %}
    <li class="flex flex-col sm:flex-row sm:items-baseline gap-1 sm:gap-4">
      <time class="text-sm text-zinc-500 dark:text-zinc-400 shrink-0" datetime="{{ post.date | dateToISO }}">{{ post.date | readableDate }}</time>
      <a class="no-underline text-blue-700 dark:text-blue-400 hover:underline" href="{{ post.url | url }}">{{ post.data.title }}</a>
    </li>
  {% endfor %}
</ul>
